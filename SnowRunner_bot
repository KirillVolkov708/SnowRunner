@bot.message_handler(commands=['start'])
def send_welcome(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton('üöõ –ü–æ–∫–∞–∑–∞—Ç—å –≤—Å–µ –º–∞—à–∏–Ω—ã')
    btn2 = types.KeyboardButton('üó∫Ô∏è –ü–æ–∫–∞–∑–∞—Ç—å –≤—Å–µ –ª–æ–∫–∞—Ü–∏–∏')
    markup.add(btn1, btn2)

    bot.send_message(message.chat.id,
                     "–ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç –ø—Ä–æ SnowRunner. –ß—Ç–æ —Ç–µ–±—è –∏–Ω—Ç–µ—Ä–µ—Å—É–µ—Ç?",
                     reply_markup=markup)


@bot.message_handler(func=lambda message: True)
def handle_message(message):
    if message.text == 'üöõ –ü–æ–∫–∞–∑–∞—Ç—å –≤—Å–µ –º–∞—à–∏–Ω—ã':
        response = "üöõ <b>–ú–∞—à–∏–Ω—ã –≤ SnowRunner:</b>\n\n"
        for vehicle, desc in vehicles.items():
            response += f"<b>{vehicle}</b>: {desc}\n\n"
        bot.send_message(message.chat.id, response, parse_mode='HTML')

    elif message.text == 'üó∫Ô∏è –ü–æ–∫–∞–∑–∞—Ç—å –≤—Å–µ –ª–æ–∫–∞—Ü–∏–∏':
        response = "üó∫Ô∏è <b>–õ–æ–∫–∞—Ü–∏–∏ –≤ SnowRunner:</b>\n\n"
        for loc, desc in locations.items():
            response += f"<b>{loc}</b>: {desc}\n\n"
        bot.send_message(message.chat.id, response, parse_mode='HTML')



bot.polling()
